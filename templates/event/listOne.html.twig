{% extends 'base.html.twig' %}

{% block title %}{% trans %} Events list {% endtrans %}{% endblock %}

{% block body %}
    <ul class="nav navbar-nav navbar-left">
        <li>
            <div>
                <a href="{{ path('allevent.list') }}"> Afficher tous les événements </a>     
            </div>
            <div>
                <a href="{{ path('event.list') }}"> Afficher les événements récents</a>     
            </div>
        </li>
    </ul>

    {% if is_granted('ROLE_ADMIN') %}
        <ul class="nav navbar-nav navbar-right">
            <li>
                <div>
                    <b>
                        <a class="navbar-brand" href="{{ path('event.create') }}">{% trans %} Create an event {% endtrans %}</a>
                    </b>     
                </div>
            </li>
        </ul>
    {% endif %}
    <br>
    <br>

    <table class="table text-center">
        <div>
            <br>
            <strong>{% trans %} Event Name {% endtrans %} : </strong>{{ event.getNameEvent() }}
            <br>
            <strong>{% trans %} Community {% endtrans %} : </strong>{{ event.getTypeEvent() }}
            <br>
            <strong>{% trans %} Even date {% endtrans %} : </strong>{{ event.getDateEvent()|date('d/m/Y') }}
            <br>
            <strong>{% trans %} Duration (days) {% endtrans %} : </strong>{{ event.getDureeEvent() }}     
        </div>
    </table>
{% endblock %}