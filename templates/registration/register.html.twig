{% extends 'base.html.twig' %}

{% block title %}{% trans %} Register {% endtrans %}{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>{% trans %} Register {% endtrans %}</h1>

    {{ form_start(registrationForm) }}
        <label> Email  : </label>
        {{ form_widget(registrationForm.email) }}
        <br>

        <label>{% trans %} Password {% endtrans %} : </label>
        {{ form_widget(registrationForm.plainPassword) }}
        <br>

        <label>{% trans %} Name {% endtrans %} : </label>
        {{ form_widget(registrationForm.nom) }}
        <br>

        <label> Pseudo : </label>
        {{ form_widget(registrationForm.pseudo) }}
        <br>

        <label>{% trans %} Phone number {% endtrans %} : </label>
        {{ form_widget(registrationForm.phone_number) }}
        <br>

        <label>{% trans %} Community name {% endtrans %} : </label>
        {{ form_widget(registrationForm.commu_name) }}
        <br>

        <label>{% trans %} Agree terms {% endtrans %} : </label>
        {{ form_widget(registrationForm.agreeTerms) }}
        <br>

        <button type="submit" class="btn">{% trans %} Register {% endtrans %}</button>
    {{ form_end(registrationForm) }}
{% endblock %}
