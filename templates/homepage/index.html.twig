{% extends 'base.html.twig' %}

{% block title %}{% trans %} Homepage {% endtrans %}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <center>
        {% if is_granted('ROLE_USER') %}
            <h2>{% trans %} You are logged in as {% endtrans %} : {{ app.user.getPseudo() }}</h2>
        {% endif %}
        <h1> <img src='/images/LogoUniv.png'></h1>
        <h1>{% trans %} Welcome to this event management site {% endtrans %} </h1>
    </center>

    {% trans %} To participate in an event you must {% endtrans %} :
    <ul>
        <li>{% trans %} Create an account {% endtrans %}</li>
        <li>{% trans %} Register for an event created by your community {% endtrans %}</li>
    </ul>

    {% trans %} Creation of events {% endtrans %} :
    <ul>
        <li>{% trans %} Only the administrator of your community can create an event {% endtrans %}</li>
        <li>{% trans %} If you're a member of a community and have an idea for an event, please refer your administrator {% endtrans %}</li>
    </ul>
</div>
{% endblock %}
